<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_head_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_check"
                android:textColor="@color/warn_text_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warn_text_color"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_check"
                android:textColor="@color/warn_text_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/check_lasttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warn_text_color"
                android:textSize="18sp"/>
        </LinearLayout>


        <com.avantport.avp.njpb.view.StateLayout
            android:id="@+id/layout_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.avantport.avp.njpb.view.StateLayout>

    </LinearLayout>
</LinearLayout>
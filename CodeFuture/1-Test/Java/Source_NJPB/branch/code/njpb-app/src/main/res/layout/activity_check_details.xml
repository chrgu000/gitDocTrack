<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/mine_head_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <include layout="@layout/item_workparts_check"/>

            <com.avantport.avp.njpb.view.CustomListview
                android:id="@+id/list_parts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="@null">

            </com.avantport.avp.njpb.view.CustomListview>

            <com.avantport.avp.njpb.view.SelectGirdView
                android:id="@+id/breakdown_pic"
                android:layout_width="match_parent"
                android:numColumns="3"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

            </com.avantport.avp.njpb.view.SelectGirdView>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_double_button"/>


</LinearLayout>

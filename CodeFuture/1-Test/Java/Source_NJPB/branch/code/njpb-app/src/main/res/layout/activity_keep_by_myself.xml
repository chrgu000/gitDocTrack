<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_head_view"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <include layout="@layout/layout_repairs_form"/>

            <LinearLayout
                android:id="@+id/lastserving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lastserving_showmore"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/right_arrows"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff0"
                    android:text="自修保养记录"
                    android:textSize="18sp"/>
            </LinearLayout>

          <!--  <include layout="@layout/details_bymyself"/>-->

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/warn_text_color"
                android:text="自修保养"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:text="更换零配件："
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

                <ImageView
                    android:id="@+id/add_moreserving"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/add_moreserving"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>

            <com.avantport.avp.njpb.view.CustomListview
                android:id="@+id/list_serving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.avantport.avp.njpb.view.CustomListview>


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/warn_text_color"
                android:textSize="22sp"
                android:text="上传照片（最多5张）："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.avantport.avp.njpb.view.SelectGirdView
                android:layout_marginTop="10dp"
                android:id="@+id/grid_pic"
                android:numColumns="3"
                android:columnWidth="2dp"
                android:verticalSpacing ="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.avantport.avp.njpb.view.SelectGirdView>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textColor="@color/warn_text_color"
                android:text="故障信息描述："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/input_msg"
                android:layout_marginTop="5dp"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="请输入描述信息"
                android:textColorHint="@color/text_hint_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/finish"
        style="@style/button_commit_style"
        android:text="提交"
        />

</LinearLayout>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <!-- Alias(别名):对应TestConn.xml中resultType-->
        <typeAlias alias="User" type="com.avp.guo.entity.TestConn" />
        <typeAlias alias="GG" type="com.avp.guo.entity.User"></typeAlias>
        <typeAlias alias="UserPost" type="com.avp.guo.entity.UserPost"></typeAlias>

        <!-- Many to Many-->
        <typeAlias alias="UserWithGroups" type="com.avp.guo.entity.UserWithGroups"></typeAlias>
        <typeAlias alias="GroupWithUsers" type="com.avp.guo.entity.GroupWithUsers"></typeAlias>
        <typeAlias alias="GroupForMany" type="com.avp.guo.entity.GroupForMany"></typeAlias>
        <typeAlias alias="UserForMany" type="com.avp.guo.entity.UserForMany"></typeAlias>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver" />
                <property name="url" value="jdbc:postgresql://localhost:5432/CD_AFC" />
                <property name="username" value="postgres" />
                <property name="password" value="123456" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!-- // power by http://www.yiibai.com -->
        <mapper resource="TestConn.xml" />
        <mapper resource="TestConnCRUD.xml"></mapper>
        <mapper resource="OneToMany.xml"></mapper>
        <mapper resource="ManyToOne.xml"></mapper>
        <mapper resource="ManyToMany.xml"></mapper>
        <mapper resource="DynamicSQL.xml"></mapper>
    </mappers>
</configuration>
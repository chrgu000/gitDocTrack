<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DynamicSQL">
    <select id="GetUserByID" resultType="UserForMany">
        select * from test."user"
        <if test="id!=null">
            where id=#{id}
        </if>
    </select>

    <!-- user.id改为User.id时，运行出错。嵌套类时，需使用其属性变量的名称-->
    <select id="getUserByContainClassId" resultType="UserForMany">
        select * from test."user"
        <if test="user.id != null">
            where id=#{user.id}
        </if>
    </select>
</mapper>